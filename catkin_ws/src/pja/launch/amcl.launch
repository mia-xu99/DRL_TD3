    <arg name="model" value="waffle_pi" />
  </include>>

  <node pkg="gazebo_ros" type="spawn_model" name="spawn_robot" args="-urdf -param /robot_description -model robot -x -2 -y 0 -z 0 -R 0 -P 0 -Y 3.14"></node>

  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" type="double" value="60.0" />
  </node>

  <!-- Map server -->
  <arg name="map_file" default="$(find turtlebot3_navigation)/maps/map1.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

