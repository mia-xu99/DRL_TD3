<?xml version="1.0" encoding="UTF-8"?>
<launch>


  <arg name="paused" default="false"/>
<!--  <arg name="use_sim_time" default="false"/>-->
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
 <!-- <arg name="gui" default="true"/> -->
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="verbose" default="false"/>
<!--  <arg name="world_name" default="indoor"/>-->
  <arg name="world_name" default="my_word"/>
<!--  <arg name="world_name" default="campus"/>-->
<!--  <arg name="world_name" default="turtlebot3_house"/>-->

  <include file="$(find gazebo_ros)/launch/empty_world.launch" >
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="debug" value="$(arg debug)"/>
    <arg name="verbose" value="$(arg verbose)"/>
    <!--<arg name="world_name" value="$(find pja)/worlds/wu2.world"/>-->
    <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/scene1.world"/>
     <!--<arg name="world_name" value="$(find turtlebot3_gazebo)/world/$(arg world_name).world"/>-->
  </include>

  <!-- <arg name="robot_description" default="$(find vehicle_simulator)/urdf/pro.urdf.xacro"/> -->
  <!-- <arg name="robot_description" default="$(find pja)/urdf/turtlebot3_burger.urdf.xacro"/> -->
  <arg name="robot_description" default="$(find pja)/urdf/pro3.xacro"/>

  <!-- <node launch-prefix="nice" pkg="rviz" type="rviz" name="rvizGA" args="-d $(find vehicle_simulator)/rviz/indoor.rviz" respawn="true"/> -->

  <param name="robot_description" command="$(find xacro)/xacro  '$(arg robot_description)' "/>
  
 <!--<node pkg="gazebo_ros" type="spawn_model" name="spawn_robot" args="-urdf -param /robot_description -model robot -x -2 -y -0.5 -z 0"/>-->
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_robot" args="-urdf -param /robot_description -model robot -x -0 -y 0 -z 0 -R 0 -P 0 -Y 3.14"></node>


  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" type="double" value="60.0" />
  </node>


  <include file="$(find pja)/launch/move_base_single.launch">
    <arg name="cmd_vel_topic" value="/cmd_vel_rl" />
    <arg name="odom_topic" value="/wheel_odom" />
    <!--arg name="sensor_scan" value="velodyne_points" /-->
    <!--  <arg name="odom_topic" default="state_estimation" />-->
    <arg name="move_forward_only" default="false"/>
  </include>


   <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory $(find cartographer_ros)/configuration_files
          -configuration_basename my.lua"
      output="screen">
    <remap from="points2" to="/os_cloud_node/points" />
    <remap from="imu" to="/os_cloud_node/imu" />
    <remap from="odom" to="/wheel_odom" />
  </node>

 <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05 -publish_period_sec 0.5" />
     
     
     <include file="$(find pja)/launch/explore_lite.launch">
       <arg name="robot_base_frame" value="base_footprint"/>
       <arg name="costmap_topic" value="move_base/global_costmap/costmap"/>
       <arg name="costmap_updates_topic" value="move_base/global_costmap/costmap_updates"/> 
     </include>

  <!-- <include file="$(find transform_point_cloud)/launch/pja.launch"/> -->
  <include file="$(find pja)/launch/tool.launch"/>


<!--  <include file="$(find aloam_velodyne)/launch/aloam_velodyne_VLP_16.launch"/>-->
 <!-- <node pkg="rqt_gui" type="rqt_gui" name="rqt_gui" /> -->
 <!-- <node pkg="rviz" type="rviz" name="rviz" /> -->

<!--  <node pkg="rosbag" type="record" name="bag_record" args="/tf /tf_static /imu /odom /odom2path /velodyne_points -o /home/xw/bag/my.bag"/>-->

  <!--include file="$(find pja)/launch/my.launch"/-->
      <!-- 运行rviz -->
    <!--<node pkg="rviz" type="rviz" name="rviz" args="-d $(find pja)/rviz/wu1.rviz"/> -->

</launch>
