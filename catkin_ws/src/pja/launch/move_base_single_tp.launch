<launch>
  <!-- Arguments -->
<!--  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>-->
<!--  <arg name="cmd_vel_topic" default="move_base/cmd_vel" />-->
  <arg name="cmd_vel_topic" default="/cmd_vel_rl" />
  <arg name="odom_topic" default="/wheel_odom_rl" />
  <arg name="velodyne_points" default="/ares1/os_cloud_node/points" />
<!--  <arg name="odom_topic" default="state_estimation" />-->
  <arg name="move_forward_only" default="false"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <!--<param name="base_local_planner" value="rlcar_local_planner/RLcarROS" />-->
    <!--<param name="base_global_planner" value="global_planner/GlobalPlanner" />-->
    <rosparam file="$(find pja)/params/costmap_common_params_burger.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find pja)/params/costmap_common_params_burger.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find pja)/params/local_costmap_params_single.yaml" command="load" />
    <rosparam file="$(find pja)/params/global_costmap_params_single_tp.yaml" command="load" />
    <rosparam file="$(find pja)/params/move_base_params.yaml" command="load" />
    <rosparam file="$(find pja)/params/dwa_local_planner_params_burger.yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <remap from="velodyne_points" to="$(arg velodyne_points)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>
