<launch>
    <arg name="simulation" default="true"/>

    <group if="$(arg simulation)" >
         <!-- 放置机器人 -->
        <include file="$(find pja)/launch/place_robot.launch">
            <arg name="robot_x_pos" value="3.0"/>
            <arg name="robot_y_pos" value="0.0"/>
            <arg name="robot_z_pos" value="0.0"/>
            <arg name="robot_yaw"   value="1.57"/>
            <arg name="robot_name" value="tb3_0"/>
            <arg name="ns" value="tb3_0"/>
        </include>
         <!-- 放置机器人 -->
        <include file="$(find pja)/launch/place_robot.launch">
            <arg name="robot_x_pos" value="0.0"/>
            <arg name="robot_y_pos" value="3.0"/>
            <arg name="robot_z_pos" value="0.0"/>
            <arg name="robot_yaw"   value="3.14"/>
            <arg name="robot_name" value="tb3_1"/>
            <arg name="ns" value="tb3_1"/>
        </include>
        <include file="$(find pja)/launch/place_robot.launch">
            <arg name="robot_x_pos" value="-3.0"/>
            <arg name="robot_y_pos" value="0.0"/>
            <arg name="robot_z_pos" value="0.0"/>
            <arg name="robot_yaw"   value="-1.57"/>
            <arg name="robot_name" value="tb3_2"/>
            <arg name="ns" value="tb3_2"/>
        </include>
        <include file="$(find pja)/launch/place_robot.launch">
            <arg name="robot_x_pos" value="0.0"/>
            <arg name="robot_y_pos" value="-3.0"/>
            <arg name="robot_z_pos" value="0.0"/>
            <arg name="robot_yaw"   value="0.0"/>
            <arg name="robot_name" value="tb3_3"/>
            <arg name="ns" value="tb3_3"/>
        </include>
    </group>
</launch>
