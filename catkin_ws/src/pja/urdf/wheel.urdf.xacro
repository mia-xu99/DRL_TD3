<?xml version="1.0"?>

<robot name="wheel" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Define a number of dimensions using properties -->
  <xacro:property name="wheel_length" value="0.080" />
  <xacro:property name="wheel_radius" value="0.135" />
  
  <xacro:property name="PI" value="3.1415" />
     
  <!-- define a wheel -->
  <xacro:macro name="wheel" params="suffix parent color *origin">
     <joint name="${parent}_${suffix}_wheel_joint" type="continuous">
      <xacro:insert_block name="origin" />
      <axis xyz="0 0 1" />
      <limit effort="100" velocity="100"/>
      <safety_controller k_velocity="10" />
      <parent link="${parent}_link"/>
      <child link="${parent}_${suffix}_wheel_link"/>
    </joint> 

     <link name="${parent}_${suffix}_wheel_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
        </geometry>
        <material name="${color}" />
      </visual>
    </link> 

  <gazebo reference="${parent}_${suffix}_wheel_link">
		<material value="Gazebo/Black"/>
        <kp>1000000.0</kp> 
        <!-- kp and kd for rubber -->
        <kd>100.0</kd>
        <mu1>10.0</mu1>
        <mu2>1.0</mu2>
        <fdir1>0 1 0</fdir1>  
        <!-- is this correct? -->
        <maxVel>1.0</maxVel>
        <minDepth>0.00</minDepth>
   </gazebo> 

  </xacro:macro>


</robot>
